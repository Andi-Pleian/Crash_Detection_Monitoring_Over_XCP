#ifndef TASK_SCHEDULER_H_
#define TASK_SCHEDULER_H_

/*********************************************************************************************************************/
/*-----------------------------------------------------Includes------------------------------------------------------*/
/*********************************************************************************************************************/

#include "Global_Types.h"
#include "Platform_Types.h"

/*********************************************************************************************************************/
/*------------------------------------------------------Defines------------------------------------------------------*/
/*********************************************************************************************************************/

#define MAX_TASKS 10

/*********************************************************************************************************************/
/*------------------------------------------------------Structs------------------------------------------------------*/
/*********************************************************************************************************************/

typedef struct {
        void (*function)(void);
        uint32 interval;     // in ms
        uint32 nextExecTime; // in ms
} S_TS_Task;

/*********************************************************************************************************************/
/*------------------------------------------------------Globals------------------------------------------------------*/
/*********************************************************************************************************************/

/*********************************************************************************************************************/
/*---------------------------------------------Function Prototypes     ----------------------------------------------*/
/*********************************************************************************************************************/

extern void TS_Create_Task(void (*function)(void), unsigned long interval);

